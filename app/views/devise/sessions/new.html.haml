.container
  =form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{:for => "inputEmail"} Email address
    =f.email_field :email, :autofocus => "", :placeholder => "Email address", :required => "", :type => "email", :class => "form-control", :id => "inputEmail"
    %label.sr-only{:for => "inputPassword"} Password
    =f.password_field :password, :placeholder => "Password", :required => "", :type => "password", :class => "form-control", :id => "inputPassword"
    .checkbox
      %label
        =f.check_box :remember_me
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path
