.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{href: "/users/#{proto_user.id}"}
            %img.media-object{alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            Top aligned media
          .proto-user
            = link_to "by #{proto_user.user_name}", "/users/#{proto_user.id}"
            %span.degree #{proto_user.member}

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("sample.png", class:'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag("sample.png", class: 'img-responsive')
        %li.list-group-item
          = image_tag("sample.png", class: 'img-responsive')
        %li.list-group-item
          = image_tag("sample.png", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p #{@prototype.catch_copy}
    .col-md-6
      %h4 Concept
      %p #{@prototype.concept}
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        - @prototype.tags.each do |tag|
          %li
            = link_to "#{tag.name}", tag_path(tag.id), class: "btn btn-default"
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (#{@comments.count})
    .col-md-8
      = render partial: "prototypes/comment", collection: @comments
      = render partial: "prototypes/form"
