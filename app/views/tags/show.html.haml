= render "prototypes/header"
.container
  .row
    .col-sm-12.proto-content
      .thumbnail
        = link_to "#{ @tag.name }", "/tags/#{ @tag.id }", class: "btn btn-tag"
        .tag-meta
          %a{href: "/tags/#{ @tag.id }", class: "label label-default tag-list-number"}
            #{ @tag.taggings_count }
            %i Projects
.container.proto-list
  .row
    = render partial: "prototypes/prototype", collection: @prototypes
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label" => "Previous", :href => "#"}
        %span{"aria-hidden" => "true"} «
    %li.active
      %a{:href => "#"}
        1
        %span.sr-only (current)
    %li
      %a{:href => "#"} 2
    %li
      %a{:href => "#"} 3
    %li
      %a{:href => "#"} 4
    %li
      %a{:href => "#"} 5
    %li
      %a{"aria-label" => "Next", :href => "#"}
        %span{"aria-hidden" => "true"} »
