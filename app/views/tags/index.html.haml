.jumbotron
  .container.text-center
    = image_tag("header_logo.png", :alt => "PROTO TYPE - SHARE THE PROTOTYPE", :height => "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{:role => "presentation"}
          %a{:href => "#"} Popular PROTO
        %li{:role => "presentation"}
          %a{:href => "#"} Newest PROTO
      = link_to 'View Tags', tags_path, class: "btn btn-default col-lg-1"
.container.proto-list
  .row
    - @tags.each do |tag|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to "#{tag.name}", tag_path(tag.id), style: "width: 100%; height: 50px; font-size: 2rem; font-weight: 300; padding-bottom: 3px; color: #999; background-color: #eee; line-height: 40px;", class: "btn btn-tag"
          .tag-meta
            = link_to tag_path(tag.id), style: "display: block; font-size: 1.3rem; border-radius: 2px; margin: 0 -2px 2px;", class: "label label-default tag-list-number" do
              %i #{tag.taggings.count} Projects
